  <div class="box" id="commande-box">
    <div class="item">
      <div class="item-left">
        <span class="item-name">Café</span>
        <select id="cafe-type" class="type-select">
          <option value="Normal">Normal</option>
          <option value="Double">Double</option>
        </select>
      </div>
      <select id="qty-cafe" class="qty-select">
        <option value="0">0</option>
        <option value="1">1</option>
      </select>
    </div>

    <div class="item">
      <div class="item-left">
        <span class="item-name">Cappuccino</span>
        <select id="cappuccino-type" class="type-select">
          <option value="Caramel">Caramel</option>
          <option value="Praliné">Praliné</option>
        </select>
      </div>
      <select id="qty-cappuccino" class="qty-select">
        <option value="0">0</option>
        <option value="1">1</option>
      </select>
    </div>

    <div class="item">
      <div class="item-left">
        <span class="item-name">Infusion</span>
      </div>
      <select id="qty-infusion" class="qty-select">
        <option value="0">0</option>
        <option value="1">1</option>
      </select>
    </div>

    <button onclick="showRecap()">Commander</button>
  </div>

  <div class="recap" id="recap-box">
    <h3>Récapitulatif de votre commande :</h3>
    <ul id="recap-list"></ul>
    <button onclick="validerCommande()">Valider ma commande</button>
  </div>

  <div id="confirmation-modal">
    <div class="modal-content">
      <h3>Commande envoyée au serveur !</h3>
      <button onclick="closeModal()">OK</button>
    </div>
  </div>

  <script>
    function showRecap() {
      const cafeType = document.getElementById("cafe-type").value;
      const cafeQty = parseInt(document.getElementById("qty-cafe").value);
      const cappuccinoType = document.getElementById("cappuccino-type").value;
      const cappuccinoQty = parseInt(document.getElementById("qty-cappuccino").value);
      const infusionQty = parseInt(document.getElementById("qty-infusion").value);

      const recapList = document.getElementById("recap-list");
      recapList.innerHTML = "";
      if (cafeQty > 0) {
        recapList.innerHTML += `<li>${cafeQty} × Café (${cafeType})</li>`;
      }
      if (cappuccinoQty > 0) {
        recapList.innerHTML += `<li>${cappuccinoQty} × Cappuccino (${cappuccinoType})</li>`;
      }
      if (infusionQty > 0) {
        recapList.innerHTML += `<li>${infusionQty} × Infusion</li>`;
      }

      document.getElementById("commande-box").style.display = "none";
      document.getElementById("recap-box").style.display = "block";
    }

    function validerCommande() {
      const modal = document.getElementById("confirmation-modal");
      modal.classList.add("active");
    }

    function closeModal() {
      const modal = document.getElementById("confirmation-modal");
      modal.classList.remove("active");
      document.getElementById("commande-box").style.display = "block";
      document.getElementById("recap-box").style.display = "none";
    }
  </script>
</body>
